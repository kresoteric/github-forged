{
  "manifest_version": 3,
  "name": "Local Ledger",
  "version": "0.1.0",
  "description": "Find local alternatives for products you're considering buying online.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
       "128": "images/icon128.png"
      }
  },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}
